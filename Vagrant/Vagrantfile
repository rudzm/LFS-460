Vagrant.configure("2") do |config|
  # Wspólna baza – jaki box
  config.vm.box = "ubuntu/jammy64"   # Ubuntu 22.04 LTS

  # Definicja naszych maszyn: nazwa => IP w prywatnej sieci
  NODES = {
    "master1" => "192.168.56.11",
    "node1" => "192.168.56.12",
    "node2" => "192.168.56.13"
  }

  NODES.each do |name, ip|
    config.vm.define name do |node|
      node.vm.hostname = name

      # Prywatna sieć wspólna dla wszystkich VM
      node.vm.network "private_network", ip: ip

      # Provider VirtualBox – trochę sensownych zasobów
      node.vm.provider "virtualbox" do |vb|
        vb.name   = "lab-#{name}"
        vb.memory = 2048
        vb.cpus   = 2
      end

      # (Opcjonalnie) mały provisioning – update pakietów
      node.vm.provision "shell", inline: <<-SHELL
        sudo apt-get update -y
      SHELL
    end
  end
end